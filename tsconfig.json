{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "types": ["node"]
    },
    "include": ["src"]
}
